<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="bottom"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/num"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#c0c0c0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="8dp"
            android:orientation="horizontal"
            android:background="@drawable/et_selecter">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:gravity="center"
                />
            <Button
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/delete"/>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:gravity="center_vertical">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/black_body"
                    android:text="1"
                    android:id="@+id/num1"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_height="36dp"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:text="2"
                    android:id="@+id/num2"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/black_body"
                    android:layout_height="36dp"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="3"
                    android:id="@+id/num3"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_margin="8dp"
                    android:background="@drawable/black_body"
                    android:layout_height="36dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:text="4"
                    android:id="@+id/num4"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/black_body"
                    android:layout_height="36dp"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="8dp"
                    android:text="5"
                    android:id="@+id/num5"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/black_body"
                    android:layout_height="36dp"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:text="6"
                    android:id="@+id/num6"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/black_body"
                    android:layout_height="36dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:text="7"
                    android:id="@+id/num7"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/black_body"
                    android:layout_height="36dp"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:text="8"
                    android:id="@+id/num8"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/black_body"
                    android:layout_height="36dp"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:text="9"
                    android:id="@+id/num9"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:background="@drawable/black_body"
                    android:layout_height="36dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_margin="8dp"
                    android:visibility="invisible"
                    android:background="@drawable/black_body"
                    android:layout_height="36dp"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="0"
                    android:id="@+id/num0"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_margin="8dp"
                    android:background="@drawable/black_body"
                    android:layout_height="36dp"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="▂▂▂▆"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_margin="8dp"
                    android:background="@drawable/black_body"
                    android:layout_height="36dp"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gesturepwd_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/welcome_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/gesturepwd_unlock_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:layout_marginRight="40.0dip"
            android:layout_marginTop="0.0dip"
            android:gravity="center_horizontal"
            android:text="请绘制手势密码"
            android:textColor="@android:color/white"
            android:shadowColor="#b3ffffff"
            android:shadowRadius="1.0"
            android:textSize="16.0sp" />

        <View
            android:id="@+id/gesturepwd_creat_gap1"
            android:layout_width="fill_parent"
            android:layout_height="4.0dip"
            />

        <TextView
            android:id="@+id/gesturepwd_unlock_failtip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40.0dip"
            android:layout_marginRight="40.0dip"
            android:layout_marginTop="0.0dip"
            android:gravity="center_horizontal"
            android:shadowColor="#b3ffffff"
            android:shadowRadius="1.0"
            android:text="5次失败后，需要重新登录。"
            android:textColor="@android:color/white"
            android:textSize="12.0sp"
            android:visibility="invisible" />



        <lzy.com.money.LockView.LockPatternView
            android:id="@+id/gesturepwd_unlock_lockview"
            android:layout_width="280.0dip"
            android:layout_height="280.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0.0dip" />

        <TextView
            android:id="@+id/gesturepwd_unlock_forget"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dip"
            android:gravity="center_horizontal"
            android:text="@string/forget"
            android:textColor="@android:color/holo_blue_bright"
            android:shadowColor="#e0ffffff"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:textSize="14.0sp" />


    </LinearLayout>
</LinearLayout>